# Required for client Supabase
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Optional: storage bucket name (defaults to journal-images)
NEXT_PUBLIC_SUPABASE_BUCKET=journal-images

# Optional: set to "true" if your bucket is private
NEXT_PUBLIC_PRIVATE_BUCKET=false

# Optional: used by server routes for storage cleanup and signing
# Only needed if using private buckets or server-side storage operations
SUPABASE_SERVICE_ROLE_KEY=

